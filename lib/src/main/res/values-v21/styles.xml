<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonRounded" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/minimum_touch_size</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>


</resources>